# Etapa de construcci칩n (build)
FROM node:20-alpine as build
WORKDIR /app
COPY package*.json ./
RUN npm install
COPY . .
RUN npm run build

# Etapa final (producci칩n)
FROM nginx:alpine
# Copia los archivos est치ticos generados en la etapa anterior
COPY --from=build /app/build /usr/share/nginx/html
# El contenedor escuchar치 en el puerto 80
EXPOSE 80
# Comando para iniciar Nginx
CMD ["nginx", "-g", "daemon off;"]